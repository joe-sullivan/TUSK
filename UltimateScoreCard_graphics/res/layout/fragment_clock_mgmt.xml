<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clockMgmtFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/choose_sport_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_sport" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/number_period_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_period"  
        android:enabled="false"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:text="@string/space"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/period_length_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/period_length"
        android:enabled="false" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:text="@string/space"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/ot_length_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ot_length"
        android:enabled="false" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:text="@string/space"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:enabled="false" />
   
</LinearLayout>
