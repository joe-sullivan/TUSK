<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
       	<shape>
        	<stroke 
           		android:width="1dp"
       			android:color="#80FFFFFF" />
  			<corners
  		   		android:radius="1dp" />
	  		<gradient 
	  		    android:angle="270"
	            android:centerColor="#60FFFFFF"
	            android:endColor="#60FFFFFF"
	            android:startColor="#60FFFFFF" />
		</shape>
    </item>
    
    <item>        
        <shape>
        	<stroke 
           		android:width="1dp"
       			android:color="#80FFFFFF" />
  			<corners
  		   		android:radius="1dp" />
	  		<gradient 
	  		    android:angle="270"
	            android:centerColor="#00000000"
	            android:endColor="#00000000"
	            android:startColor="#00000000" />
        </shape>
    </item>
            
</selector>