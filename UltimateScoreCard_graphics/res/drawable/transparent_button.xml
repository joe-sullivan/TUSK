<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
       	<shape>
        	<stroke 
           		android:width="1dp"
       			android:color="#c4FFFFFF" />
  			<corners
  		   		android:radius="1dp" />
	  		<gradient 
	  		    android:angle="270"
	            android:centerColor="#c4FFFFFF"
	            android:endColor="#c4FFFFFF"
	            android:startColor="#c4FFFFFF" />
		</shape>
    </item>
    
    <item>        
        <shape>
        	<stroke 
           		android:width="1dp"
       			android:color="#00000000" />
  			<corners
  		   		android:radius="1dp" />
	  		<gradient 
	  		    android:angle="270"
	            android:centerColor="#80FFFFFF"
	            android:endColor="#80FFFFFF"
	            android:startColor="#80FFFFFF" />
        </shape>
    </item>
            
</selector>